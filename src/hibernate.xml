<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">


	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
<!-- org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean Extiende de LocalSessionFactoryBean, asi que no pasa nada -->
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>

		<property name="mappingResources">
			<list>
				<value>edu/curso/java/hibernate/model/Persona.hbm.xml</value>
				<value>edu/curso/java/hibernate/model/Tablet.hbm.xml</value>
			</list>
		</property>

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.DerbyDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>

		<!--		<property name="annotatedClasses">-->
		<!--			<list>-->
		<!--				<value>edu.curso.java.hibernate.model.Tablet</value>-->
		<!--				<value>edu.curso.java.hibernate.model.Persona</value>-->
		<!--			</list>-->
		<!--		</property>-->

	</bean>
</beans>